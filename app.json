{
  "expo": {
    "name": "Meami",
    "slug": "meami",
    "version": "1.4.0",
    "orientation": "portrait",
    "icon": "./assets/images/precharged/logos/icon.png",
    "scheme": "meami",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.meami.app",
      "versionCode": 1,
      "icon": "./assets/images/precharged/logos/adaptive_icon.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/precharged/logos/adaptive_icon.png",
        "backgroundColor": "#491B1E"
      },
      "edgeToEdgeEnabled": true
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/precharged/logos/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#E09873"
        }
      ],
      "expo-sqlite",
      [
        "expo-font",
        {
          "android": {
            "fonts": [
              {
                "fontFamily": "SN",
                "fontDefinitions": [
                  { "path": "./assets/fonts/SN_Regular.ttf", "weight": 400 },
                  { "path": "./assets/fonts/SN_Medium.ttf", "weight": 500 },
                  { "path": "./assets/fonts/SN_SemiBold.ttf", "weight": 600 },
                  { "path": "./assets/fonts/SN_Bold.ttf", "weight": 700 }
                ]
              }
            ]
          }
        }
      ],
      [
        "expo-asset",
        {
          "assets": [
            "./assets/images/precharged/logos/logo.png",
            "./assets/images/precharged/logos/logo_text.png",

            "./assets/images/precharged/viewImages/storage_3x.jpg",
            "./assets/images/precharged/viewImages/recipes_3x.jpg",
            "./assets/images/precharged/viewImages/ingredients_3x.jpg",
            "./assets/images/precharged/viewImages/cooking_3x.jpg",

            "./assets/images/precharged/background/stock_3x.jpg",
            "./assets/images/precharged/background/recipes_3x.jpg",
            "./assets/images/precharged/background/menu_3x.jpg",
            "./assets/images/precharged/background/infos_3x.jpg",
            "./assets/images/precharged/background/cart_3x.jpg"
          ]
        }
      ]
    ],
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/4201e8a9-82b6-4928-84f4-6b2ddf6dfaf9"
    },
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "expoRouterAppRoot": "./app"
      },
      "eas": {
        "projectId": "4201e8a9-82b6-4928-84f4-6b2ddf6dfaf9"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
